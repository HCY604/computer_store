package model;

public class Product {
    private Integer id;
    private Integer categoryId;
    private String  categoryName; // 方便 UI 顯示
    private String  productName;
    private int     shelfPrice;
    private int     stockQty;
    private int     reorderPoint;

    public Integer getId() { return id; }
    public void setId(Integer id) { this.id = id; }

    public Integer getCategoryId() { return categoryId; }
    public void setCategoryId(Integer categoryId) { this.categoryId = categoryId; }

    public String getCategoryName() { return categoryName; }
    public void setCategoryName(String categoryName) { this.categoryName = categoryName; }

    public String getProductName() { return productName; }
    public void setProductName(String productName) { this.productName = productName; }

    public int getShelfPrice() { return shelfPrice; }
    public void setShelfPrice(int shelfPrice) { this.shelfPrice = shelfPrice; }

    public int getStockQty() { return stockQty; }
    public void setStockQty(int stockQty) { this.stockQty = stockQty; }

    public int getReorderPoint() { return reorderPoint; }
    public void setReorderPoint(int reorderPoint) { this.reorderPoint = reorderPoint; }

    @Override
    public String toString() {
        // 採購/購物頁顯示目前庫存
        return productName + "（庫存：" + stockQty + "）";
    }
}
