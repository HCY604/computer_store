package controller;

import model.Employee;
import service.EmployeeService;
import service.impl.EmployeeServiceImpl;
import util.Tool;

import javax.swing.*;

public class EmployeeLogin extends JFrame {
    private static final long serialVersionUID = 1L;

    private JTextField txtUsername;
    private JPasswordField txtPassword;
    private final EmployeeService employeeService = new EmployeeServiceImpl();

    public EmployeeLogin() {
        setTitle("員工登入");
        setSize(360, 240);
        setLocationRelativeTo(null);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLayout(null);

        JLabel l1 = new JLabel("帳號："); l1.setBounds(40, 40, 80, 25); add(l1);
        txtUsername = new JTextField(); txtUsername.setBounds(100, 40, 200, 25); add(txtUsername);

        JLabel l2 = new JLabel("密碼："); l2.setBounds(40, 80, 80, 25); add(l2);
        txtPassword = new JPasswordField(); txtPassword.setBounds(100, 80, 200, 25); add(txtPassword);

        JButton btnLogin = new JButton("登入"); btnLogin.setBounds(100, 130, 90, 28); add(btnLogin);
        JButton btnBack  = new JButton("返回"); btnBack.setBounds(210, 130, 90, 28); add(btnBack);

        btnLogin.addActionListener(e -> doLogin());
        btnBack.addActionListener(e -> { new RoleSelector().setVisible(true); dispose(); });
    }

    private void doLogin() {
        String u = txtUsername.getText().trim();
        String p = String.valueOf(txtPassword.getPassword());
        if (u.isEmpty() || p.isEmpty()) { JOptionPane.showMessageDialog(this, "請輸入帳號與密碼"); return; }

        Employee emp = employeeService.login(u, p);
        if (emp != null) {
            Tool.saveEmployee(emp);
            new EmployeePanel().setVisible(true);
            dispose();
        } else {
            JOptionPane.showMessageDialog(this, "登入失敗");
        }
    }
}
