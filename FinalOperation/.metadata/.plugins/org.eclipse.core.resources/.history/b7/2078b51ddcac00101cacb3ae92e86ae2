package dao;

import model.Product;
import java.util.List;

public interface ProductDao {
    List<String> listCategories();
    List<Product> listByCategory(String categoryName);
    List<Product> listNeedRestock();               // 只取需要補貨
    Product findByName(String productName);
    void updateStock(int productId, int newQty);
    boolean increaseStock(int productId, int qty); // +qty
    boolean decreaseStock(int productId, int qty); // -qty，庫存不足則不動作
    void updatePrice(int productId, int newPrice);
}
