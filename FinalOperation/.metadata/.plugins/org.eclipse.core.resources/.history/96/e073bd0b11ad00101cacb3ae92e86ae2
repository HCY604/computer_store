package controller;

import util.UiKit;
import javax.swing.*;

public class MainApp {
    public static void main(String[] args) {
        try { UIManager.setLookAndFeel(UIManager.getSystemLookAndFeelClassName()); } catch (Exception ignore) {}

        JFrame f = new JFrame();
        f.setSize(380, 240);
        f.setLocationRelativeTo(null);
        f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        f.setLayout(null);
        UiKit.attachClockToTitle(f, "登入選擇");

        JButton btnMember  = new JButton("會員");
        JButton btnEmployee= new JButton("員工");

        btnMember.setBounds(60, 70, 120, 36);
        btnEmployee.setBounds(200, 70, 140, 36);

        f.add(btnMember); f.add(btnEmployee);

        btnMember.addActionListener(e -> new MemberLogin(f).setVisible(true));
        btnEmployee.addActionListener(e -> new EmployeeLogin(f).setVisible(true));

        f.setVisible(true);
    }
}
