package service;

import model.Product;
import java.util.List;

public interface ProductService {
    List<String> listCategories();
    List<Product> listByCategory(String categoryName);
    List<Product> listNeedRestock();

    Product getById(int id);
    Product getByName(String productName);

    void insert(Product p);
    void updatePrice(int productId, int newPrice);
    void updateStock(int productId, int newQty);
    boolean increaseStock(int productId, int qty);
    boolean decreaseStock(int productId, int qty);
}
