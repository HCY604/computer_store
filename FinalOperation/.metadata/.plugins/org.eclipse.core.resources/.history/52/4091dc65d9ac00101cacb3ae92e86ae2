package dao.impl;

import dao.AdminDao;
import model.AdminUser;
import util.DbConnection;

import java.sql.*;

public class AdminDaoImpl implements AdminDao {
    @Override
    public AdminUser login(String username, String password, String pin) {
        String sql = "SELECT id,username,password,security_pin,balance FROM admin_user WHERE username=? AND password=? AND security_pin=?";
        try {
            PreparedStatement ps = DbConnection.getDb().prepareStatement(sql);
            ps.setString(1, username);
            ps.setString(2, password);
            ps.setString(3, pin);
            ResultSet rs = ps.executeQuery();
            if (rs.next()) {
                AdminUser a = new AdminUser();
                a.setId(rs.getInt("id"));
                a.setUsername(rs.getString("username"));
                a.setPassword(rs.getString("password"));
                a.setSecurityPin(rs.getString("security_pin"));
                a.setBalance(rs.getInt("balance"));
                return a;
            }
        } catch (SQLException e) { e.printStackTrace(); }
        return null;
    }

    @Override
    public void updateBalance(int adminId, int newBalance) {
        String sql = "UPDATE admin_user SET balance=? WHERE id=?";
        try {
            PreparedStatement ps = DbConnection.getDb().prepareStatement(sql);
            ps.setInt(1, newBalance);
            ps.setInt(2, adminId);
            ps.executeUpdate();
        } catch (SQLException e) { e.printStackTrace(); }
    }

    @Override
    public int getBalance(int adminId) {
        String sql = "SELECT balance FROM admin_user WHERE id=?";
        try {
            PreparedStatement ps = DbConnection.getDb().prepareStatement(sql);
            ps.setInt(1, adminId);
            ResultSet rs = ps.executeQuery();
            if (rs.next()) return rs.getInt(1);
        } catch (SQLException e) { e.printStackTrace(); }
        return 0;
    }
}
