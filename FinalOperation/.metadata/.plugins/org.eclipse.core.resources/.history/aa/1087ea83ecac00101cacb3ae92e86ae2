package dao.impl;

import dao.ProductDao;
import model.Product;
import util.DbConnection;

import java.sql.*;
import java.util.ArrayList;
import java.util.List;

public class ProductDaoImpl implements ProductDao {

    @Override
    public List<String> listCategories() {
        List<String> list = new ArrayList<>();
        String sql = "SELECT category_name FROM product_category ORDER BY category_name";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql);
             ResultSet rs = ps.executeQuery()) {
            while (rs.next()) list.add(rs.getString(1));
        } catch (SQLException e) { e.printStackTrace(); }
        return list;
    }

    @Override
    public List<Product> listByCategory(String categoryName) {
        List<Product> list = new ArrayList<>();
        String sql = "SELECT p.id, c.id AS cat_id, c.category_name, p.product_name, p.shelf_price, p.stock_qty, p.reorder_point " +
                     "FROM product p JOIN product_category c ON c.id=p.category_id WHERE c.category_name=? ORDER BY p.product_name";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql)) {
            ps.setString(1, categoryName);
            try (ResultSet rs = ps.executeQuery()) {
                while (rs.next()) list.add(mapRow(rs));
            }
        } catch (SQLException e) { e.printStackTrace(); }
        return list;
    }

    @Override
    public List<Product> listNeedRestock() {
        List<Product> list = new ArrayList<>();
        String sql = "SELECT p.id, c.id AS cat_id, c.category_name, p.product_name, p.shelf_price, p.stock_qty, p.reorder_point " +
                     "FROM v_product_need_restock v " +
                     "JOIN product p ON p.id=v.id " +
                     "JOIN product_category c ON c.id=p.category_id " +
                     "ORDER BY p.stock_qty ASC, p.product_name";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql);
             ResultSet rs = ps.executeQuery()) {
            while (rs.next()) list.add(mapRow(rs));
        } catch (SQLException e) { e.printStackTrace(); }
        return list;
    }

    @Override
    public Product findByName(String name) {
        String sql = "SELECT p.id, c.id AS cat_id, c.category_name, p.product_name, p.shelf_price, p.stock_qty, p.reorder_point " +
                     "FROM product p JOIN product_category c ON c.id=p.category_id WHERE p.product_name=?";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql)) {
            ps.setString(1, name);
            try (ResultSet rs = ps.executeQuery()) {
                if (rs.next()) return mapRow(rs);
            }
        } catch (SQLException e) { e.printStackTrace(); }
        return null;
    }

    @Override
    public Product findById(int id) {
        String sql = "SELECT p.id, c.id AS cat_id, c.category_name, p.product_name, p.shelf_price, p.stock_qty, p.reorder_point " +
                     "FROM product p JOIN product_category c ON c.id=p.category_id WHERE p.id=?";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql)) {
            ps.setInt(1, id);
            try (ResultSet rs = ps.executeQuery()) { if (rs.next()) return mapRow(rs); }
        } catch (SQLException e) { e.printStackTrace(); }
        return null;
    }

    @Override
    public boolean decreaseStock(int productId, int qty) {
        String sql = "UPDATE product SET stock_qty = stock_qty - ? WHERE id=? AND stock_qty >= ?";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql)) {
            ps.setInt(1, qty); ps.setInt(2, productId); ps.setInt(3, qty);
            return ps.executeUpdate() == 1;
        } catch (SQLException e) { e.printStackTrace(); }
        return false;
    }

    @Override
    public boolean increaseStock(int productId, int qty) {
        String sql = "UPDATE product SET stock_qty = stock_qty + ? WHERE id=?";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql)) {
            ps.setInt(1, qty); ps.setInt(2, productId);
            return ps.executeUpdate() == 1;
        } catch (SQLException e) { e.printStackTrace(); }
        return false;
    }

    @Override
    public boolean updateStock(int productId, int newQty) {
        String sql = "UPDATE product SET stock_qty=? WHERE id=?";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql)) {
            ps.setInt(1, newQty); ps.setInt(2, productId);
            return ps.executeUpdate() == 1;
        } catch (SQLException e) { e.printStackTrace(); }
        return false;
    }

    private Product mapRow(ResultSet rs) throws SQLException {
        Product p = new Product();
        p.setId(rs.getInt("id"));
        p.setCategoryId(rs.getInt("cat_id"));
        p.setCategoryName(rs.getString("category_name"));
        p.setProductName(rs.getString("product_name"));
        p.setShelfPrice(rs.getInt("shelf_price"));
        p.setStockQty(rs.getInt("stock_qty"));
        p.setReorderPoint(rs.getInt("reorder_point"));
        return p;
    }
}
