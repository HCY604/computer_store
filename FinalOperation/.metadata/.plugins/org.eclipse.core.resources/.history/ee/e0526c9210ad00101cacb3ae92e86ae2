package dao.impl;

import dao.ProductDao;
import model.Product;
import util.DbConnection;

import java.sql.*;
import java.util.ArrayList;
import java.util.List;

public class ProductDaoImpl implements ProductDao {

    private Product map(ResultSet rs) throws SQLException {
        Product p = new Product();
        p.setId(rs.getInt("id"));
        p.setCategory(rs.getString("category"));
        p.setName(rs.getString("name"));
        p.setPrice(rs.getInt("price"));
        p.setStock(rs.getInt("stock"));
        try {
            // 若資料表有 safe_stock 欄位就帶出；沒有就忽略
            int safe = rs.getInt("safe_stock");
            if (!rs.wasNull()) p.setSafeStock(safe);
        } catch (SQLException ignore) {}
        return p;
    }

    @Override
    public List<Product> findAll() {
        List<Product> list = new ArrayList<>();
        String sql = "SELECT id,category,name,price,stock,IFNULL(safe_stock,0) AS safe_stock FROM product ORDER BY id";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql);
             ResultSet rs = ps.executeQuery()) {
            while (rs.next()) list.add(map(rs));
        } catch (SQLException e) {
            e.printStackTrace();
        }
        return list;
    }

    @Override
    public Product findByName(String name) {
        String sql = "SELECT id,category,name,price,stock,IFNULL(safe_stock,0) AS safe_stock "
                   + "FROM product WHERE name = ? LIMIT 1";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql)) {
            ps.setString(1, name);
            try (ResultSet rs = ps.executeQuery()) {
                if (rs.next()) return map(rs);
            }
        } catch (SQLException e) {
            e.printStackTrace();
        }
        return null; // 找不到
    }

    @Override
    public void changeStock(int productId, int delta) {
        String sql = "UPDATE product SET stock = stock + ? WHERE id = ?";
        try (PreparedStatement ps = DbConnection.getDb().prepareStatement(sql)) {
            ps.setInt(1, delta);
            ps.setInt(2, productId);
            ps.executeUpdate();
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}
