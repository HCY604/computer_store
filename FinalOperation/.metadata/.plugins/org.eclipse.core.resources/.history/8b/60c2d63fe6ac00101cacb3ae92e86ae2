package util;

import model.Member;
import model.AdminUser;
import model.Employee;

public class Tool {
    private static Member currentMember;
    private static AdminUser currentAdmin;
    private static Employee currentEmployee;

    public static void saveMember(Member m){ currentMember = m; }
    public static Member loadMember(){ return currentMember; }
    public static void clearMember(){ currentMember = null; }

    public static void saveAdmin(AdminUser a){ currentAdmin = a; }
    public static AdminUser loadAdmin(){ return currentAdmin; }
    public static void clearAdmin(){ currentAdmin = null; }

    public static void saveEmployee(Employee e){ currentEmployee = e; }
    public static Employee loadEmployee(){ return currentEmployee; }
    public static void clearEmployee(){ currentEmployee = null; }
}
