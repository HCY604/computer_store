package service.impl;

import dao.FundDao;
import dao.impl.FundDaoImpl;
import service.FundService;

public class FundServiceImpl implements FundService {
    private final FundDao dao = new FundDaoImpl();
    @Override public int getBalance() { return dao.getBalance(); }
    @Override public void addTxn(String type, int amount, String memo, Integer refId) { dao.addTxn(type, amount, memo, refId); }
    @Override public void addExpense(int amount) { dao.addExpense(amount); }
    @Override public void addIncome(int amount) { dao.addIncome(amount); }
}
